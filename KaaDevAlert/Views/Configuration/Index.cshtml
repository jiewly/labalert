@model IEnumerable<KaaDevAlert.Models.Configuration>

@{
    int rowNumber = 1;
    ViewData["Title"] = "Configuration";
}

<div class="row">
    <a href="/Configuration/Create" class="btn btn-primary">New Configuration</a>
</div>
<br />
<div class="row">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeyNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @rowNumber
                    @*@Html.DisplayFor(modelItem => item.Id)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KeyNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>


                <td style="width:15%">
                    <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-secondary btn-sm">Edit</a> |
                    <a href="/Configuration/Delete/@item.Id"class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>